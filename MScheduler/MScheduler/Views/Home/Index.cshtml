@using MScheduler.Models;
@{
    ViewBag.Title = "Matches";
}

<table class="matches">
    <thead>
        <tr>
            <th>Division</th>
            <th>First Team</th>
            <th>Second Team</th>
            <th>Ground</th>
            <th>Day</th>
            <th>Date</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Match m in ViewBag.matches)
        {
            <tr>
                <td>@m.division</td>
                <td>@m.firstTeam</td>
                <td>@m.secondTeam</td>
                <td>@m.ground</td>
                <td>@m.day</td>
                <td>@m.date.ToShortDateString()</td>
                <td>@m.time</td>
            </tr>
        }
    </tbody>
</table>